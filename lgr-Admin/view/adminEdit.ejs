        layui.use(['form', 'layer'], function () {
            $ = layui.jquery;
            var form = layui.form()
                , layer = layui.layer;

            //自定义验证规则
            form.verify({
                username: function (value) {
                    if (value.length < 5) {
                        return '昵称至少得5个字符';
                    }
                },
                pass: [/(.+){6,12}$/, '密码必须6到12位'],
                repass: function (value) {
                    if ($('#L_pass').val() != $('#L_repass').val()) {
                        return '两次密码不一致';
                    }
                }
            });


            $('#username').blur(function (e) {
                e.preventDefault();
                $.ajax({
                    type: "post",
                    url: "/adminList/name",
                    data: { username: $('#username').val() },
                    success: function (str) {
                        // console.log(str.status);

                        layui.use(['form', 'layer'], function () {
                            $ = layui.jquery;
                            var form = layui.form()
                                , layer = layui.layer;


                            // 判断用户是否存在
                            var thisid = "<%- id %>"
                            var strid = (str.status) ? (str.findname[0]._id) : 0;
                            if (str.status == '1' && strid != thisid) {
                                e.preventDefault();
                                $('#errorname').html('用户名已存在').css('color', 'red');
                                $('.adminAdd').css('background', 'red');
                                // 监听提交弹窗
                                form.on('submit(add)', function (data) {
                                    layer.alert("保存失败、用户名已存在", { icon: 6 }, function () {
                                        // 获得frame索引
                                        var index = parent.layer.getFrameIndex(window.name);
                                        //关闭当前frame
                                        parent.layer.close(index);
                                    });
                                    return false;
                                });
                            }
                            if (str.status == '0') {
                                $('#errorname').html('将会成为您唯一的登入名').css('color', '#999');
                                $('.adminAdd').css('background', '#009688');
                                form.on('submit(add)', function (data) {
                                    btnadd();
                                    layer.alert("即将为您保存用户", { icon: 6 }, function () {
                                        // 获得frame索引

                                        var index = parent.layer.getFrameIndex(window.name);
                                        //关闭当前frame
                                        parent.layer.close(index);

                                    });
                                    return false;
                                });
                            }
                        });
                    }
                });

            });
        });


        function btnadd() {
            // 登录发送请求
            // e.preventDefault();
            $.ajax({
                type: "post",
                url: "/adminList/edit",
                data: {
                    username: $('#username').val(),
                    email: $('.email').val(),
                    phone: $('#phone').val(),
                    role: $('#role').val(),
                    password: $('.password').val(),
                    id: "<%- id %>",
                },
                success: function (str) {
                    layui.use(['form', 'layer'], function () {
                        $ = layui.jquery;
                        var form = layui.form(),
                            layer = layui.layer;

                        if (str.status == '1') {
                            layer.alert("保存成功", { icon: 6 }, function () {
                                var index = parent.layer.getFrameIndex(window.name);
                                parent.layer.close(index);
                                location.reload();
                            });
                        } else if (str.status == '0') {
                            layer.alert("保存失败、请稍后再试", { icon: 6 }, function () {
                                var index = parent.layer.getFrameIndex(window.name);
                                parent.layer.close(index);
                            });
                        } else if (str.status == '-1') {
                            layer.alert("保存失败、用户名已存在", { icon: 6 }, function () {
                                var index = parent.layer.getFrameIndex(window.name);
                                parent.layer.close(index);
                            });
                        }
                    });
                }
            });


        }
